{
  "editor.formatOnSave": true,

  "window.commandCenter": true,

  "css.validate": false,

  "workbench.colorTheme": "One Dark Pro",

  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.rulers": [120, 240],
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  // "editor.fontFamily": "Monocraft",
  // Menlo, Monaco, 'Courier New', monospace
  // "editor.fontFamily": "Cascadia Mono",
  "editor.fontSize": 12,
  "editor.lineHeight": 20,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",

  "files.insertFinalNewline": true,

  "debug.toolBarLocation": "floating",

  "terminal.integrated.scrollback": 5000,

  "vim.leader": "<space>",
  "vim.hlsearch": true,

  "search.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.next": true,
    "**/bower_components": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/logs": true,
    "**/package-lock.json": true,
    "**/tmp": true,
    "**/node_modules": true,
    "**/.pnpm-debug.log": true,
    "**/turbo-build.log": true
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.chrome": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.idea": true,
    "**/.svn": true,
    "**/.vstags": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "files.associations": {
    "*.json": "jsonc"
  },

  "terminal.integrated.defaultProfile.osx": "zsh",

  "workbench.editor.untitled.hint": "hidden",
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreview": false,
  "terminal.integrated.inheritEnv": false,
  "search.useGlobalIgnoreFiles": true,
  "oneDarkPro.italic": false,
  "editor.suggestSelection": "first",
  "security.workspace.trust.untrustedFiles": "open",
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
  "remote.SSH.configFile": "/var/folders/60/t00fw79n5r9_rz3kfdbn8zw40000gn/T/gitpod_ssh_config-72128-yqjlE3hEJvTl",
  "editor.inlineSuggest.enabled": true,
  "git.autofetch": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "redhat.telemetry.enabled": false,
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnType": true
  },
  "python.formatting.autopep8Args": [
    "--max-line-length",
    "120",
    "--indent-size=2",
    "--experimental"
  ],
  "githubPullRequests.pullBranch": "never",
  "editor.stickyScroll.enabled": true,
  "debug.allowBreakpointsEverywhere": true,
  "playwright.reuseBrowser": true,
  // "editor.inlayHints.enabled": "off"
  // "workbench.colorCustomizations": {
  //   "editor.lineHighlightBackground": "#1073cf2d",
  //   "editor.lineHighlightBorder": "#9fced11f"
  // },
  // "diffEditor.wordWrap": "off",
  // "editor.guides.indentation": false,
  // "editor.guides.bracketPairs": false

  // "rust-analyzer.inlayHints.parameterHints.enable": false,
  // "rust-analyzer.inlayHints.typeHints.enable": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "vim.foldfix": true,
  "playwright.showTrace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "window.zoomLevel": 1
}
