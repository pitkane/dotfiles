{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "One Dark Pro",
  "window.zoomLevel": 0,
  "editor.fontSize": 14,
  "editor.fontFamily": "Hasklig, Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.wordWrapColumn": 120,
  // "workbench.fontAliasing": "antialiased",
  "[html]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[xml]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "editor.formatOnPaste": false,
  "editor.renderWhitespace": "none",
  "search.exclude": {
    "node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/dist": true,
    "**/logs": true,
    "**/package-lock.json": true
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "editor.rulers": [
    80,
    100
  ],
  "files.associations": {
    "*.template": "mustache",
    "*.pm": "perl"
  },
  "vsicons.projectDetection.autoReload": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.idea": true,
    "**/build": true,
    "**/.vscode": true,
    "**/yarn.lock": true,
    "**/tmp": true,
    "**/__pycache__": true,
    "**/.vstags": true,
    "**/.chrome": true,
    "**/dist": true,
  },
  "editor.renderControlCharacters": false,
  "vim.overrideCopy": false,
  "editor.fontLigatures": false,
  "editor.cursorBlinking": "solid",
  "files.insertFinalNewline": true,
  // "vim.disableAnnoyingNeovimMessage": true,
  // "perltidy.additionalArguments": ["-l=140"],
  // "perl.perltidy": "perltidy",
  "editor.minimap.enabled": false,
  "markdown.preview.scrollPreviewWithEditorSelection": false,
  "markdown.preview.markEditorSelection": false,
  "workbench.startupEditor": "newUntitledFile",
  "html.format.indentHandlebars": true,
  "jest.pathToJest": "npm test --",
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.otherModesKeyBindings": [],
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-n>"
      ],
      "after": [],
      "commands": [
        {
          "command": ":nohl",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "h"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusPreviousGroup",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "l"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusNextGroup",
          "args": []
        }
      ]
    }
  ],
  "prettier.printWidth": 100,
  "jest.enableCodeLens": false,
  "python.venvPath": "~/.virtualenvs",
  "python.pythonPath": "python3",
  "workbench.editor.tabSizing": "shrink",
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "markdown.preview.scrollEditorWithPreview": false,
  "pasteImage.path": "${projectRoot}/images",
  "pasteImage.basePath": "${projectRoot}",
  "pasteImage.prefix": "/",
}
