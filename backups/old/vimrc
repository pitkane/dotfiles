" vim-airline
let g:bufferline_echo = 0 " can't remember, and too lazy to look it up
set laststatus=2 " show airline even with only one pane
set noshowmode " Don't show default mode change info


" vim-textmanip
xmap <Space>d <Plug>(textmanip-duplicate-down)
nmap <Space>d <Plug>(textmanip-duplicate-down)
xmap <Space>D <Plug>(textmanip-duplicate-up)
nmap <Space>D <Plug>(textmanip-duplicate-up)

